@page
@model ServiceTestTask.Pages.Tasks.CreateModel

@{
    ViewData["Title"] = "Создать";
}

<h1>Создать задачу</h1>

<h4>Новая задача</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task.Name" class="control-label">Заголовок</label>
                <input asp-for="Task.Name" class="form-control" />
                <span asp-validation-for="Task.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label">Описание</label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Worker" class="control-label">Исполнитель</label>
                <input asp-for="Task.Worker" class="form-control"/>
                <span asp-validation-for="Task.Worker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Date" class="control-label">Срок выполнения</label>
                <input asp-for="Task.Date" class="form-control" type="date" />
                <span asp-validation-for="Task.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
